<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.randomalarm">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".song.SongPickerActivity"
            android:label="@string/title_activity_song_picker"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".edit.AlarmEditActivity"
            android:label="@string/title_activity_alarm_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".song.AlarmSongActivity"
            android:label="@string/title_activity_alarm_song" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".setting.AlarmSettingActivity"
            android:label="@string/title_activity_alarm_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alarm.AlarmActivity"
            android:launchMode="singleTask" />

        <receiver android:name=".alarm.AlarmReceiver">
            <intent-filter>
                <action android:name="com.example.randomalarm.ALARM_BROADCAST" />
            </intent-filter>
        </receiver>

        <service android:name=".alarm.AlarmCheckService" />
        <service android:name=".alarm.ForegroundService" />
    </application>

</manifest>