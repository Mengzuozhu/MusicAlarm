<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDodgerBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullscreenNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--标题与NavigationIcon的距离-->
    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="StyleListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/list_item_height_40</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">@dimen/list_item_margin_5</item>
        <item name="android:layout_marginStart">@dimen/list_item_margin_5</item>
    </style>

    <style name="StyleListRightItem">
        <item name="android:layout_width">@dimen/list_item_width_25</item>
        <item name="android:layout_height">@dimen/list_item_height_40</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/list_item_margin_top_2</item>
        <item name="android:layout_marginRight">@dimen/list_item_margin_5</item>
    </style>

    <style name="StyleFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin_10</item>
    </style>

    <style name="StyleSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:iconifiedByDefault">true</item>
        <item name="android:queryHint">请输入搜索内容</item>
    </style>

    <style name="StyleAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="StyleImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_marginStart">@dimen/image_margin_2</item>
        <item name="android:layout_marginTop">@dimen/image_margin_4</item>
        <item name="android:layout_marginEnd">@dimen/image_margin_2</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="StyleRemindTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
</resources>
